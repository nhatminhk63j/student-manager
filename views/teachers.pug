extends base
block content
    .content
        .finding-box
            form.input-box(method='POST')
                .form-group
                    input.form-control.m-3(id='txt1-search' type='text' name='name' placeholder='Enter name')
                    input.btn.btn-primary.btn-block.m-3(id='img-search' type='submit' value='Search')
        div
            table.table.mt-5.table-bordered
                thead
                    tr
                        th Full Name
                        th Email
                        th Department
                        th Action
                if teachers        
                    each i in teachers
                        tr
                            td= i.full_name
                            td= i.email
                            td= i.department
                            td
                                a.btn.btn-success(href=`/teachers/${i.teacher_Id}`) Detail
                             
                        
                        